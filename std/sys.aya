require io {path}

:{} :sys;

def ::args :(sys.args)


.#? sys.iswindows\n  returns true if system is windows
def ::iswindows {:9s"\\"=}


.# ::str sys.cd\n  set working directory
def ::cd {dirname : path^,
    dirname
    .# If it is a string, conv to path
    dirname str :@ { path! } ?
    P :(sys.cd)
}


.#? ::str sys.mkdir\n  create a new directory
def ::mkdir {dir,
    dir P :(sys.mkdir)
}


def ::readdir {dir,
    dir P :dir;
    dir "" = {"." :dir;} ?
    dir :(sys.readdir)
}

