.#? ::matrix ::matrix.hcat\n  concatenate horizontally
def matrix::hcat {a::matrix b::matrix,
    a.rows b.rows {J} .& a.M._new
}

.#? ::matrix ::matrix.vcat\n  concatenate vertically
def matrix::vcat {a::matrix b::matrix,
    a.rows b.rows J a.M._new
