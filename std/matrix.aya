def matrix::dot {o self : t matrix^,
    o.c self.r =! {
        "matrix.mul: shape mismatch $(o.c) != $(self.r)".D
    } ?
    .# (*S) is the dot product
    self.rows.T :t;
    o.rows  :# {r, t :#{r *S}}
    matrix._new
}

